<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="obj"
            type="scoproject.com.contactsappgojek.model.People" />
        <variable
            name="isIndex"
            type="java.lang.Boolean" />
        <variable
            name="vm"
            type="scoproject.com.contactsappgojek.viewmodel.contactlist.ContactListRowVM"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:clickable="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/sectionTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.10"
            android:text="@{isIndex ? vm.mInitialName.substring(0, 1) : @string/empty}"
            tools:text="A"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            />
        <ImageView
            app:profile_pic="@{obj.profile_pic}"
            android:id="@+id/itemImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.15" />
        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_weight="0.70"
            android:text="@={vm.mFullName}"
            tools:text="Person Name"
            android:textAppearance="?android:attr/textAppearanceListItem" />
    </LinearLayout>
</layout>